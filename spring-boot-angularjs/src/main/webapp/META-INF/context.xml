<?xml version="1.0" encoding="UTF-8"?>
<Resource
    name="jdbc/jjdb"
    auth="Container"
    type="javax.sql.DataSource"
    maxActive="100"
    maxIdle="30"
    maxWait="10000"
    driverClassName="com.mysql.jdbc.Driver"
    url="jdbc:mysql://localhost:3306/jjdb"
    username="myuser"
    password="mypass"
    >
</Resource>    